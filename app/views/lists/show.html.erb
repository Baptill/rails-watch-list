<h1>Show</h1>

  <% @list.movies.each do |movie| %>
  <ul>
    <li><%= movie.title %></li>
    <li><%= movie.overview %></li>
    <li><%= movie.poster_url %></li>
    <li><%= movie.rating %></li>
    <% bookmark = Bookmark.find_by(list_id: @list.id, movie_id: movie.id) %>
    <%= bookmark.comment %>
    <%= link_to "Delete", bookmark_path(bookmark), data:{turbo_method: :delete, turbo_confirm: "Etes vous sur ?"}%>
  </ul>
    <% end %>

<%= link_to "Back", lists_path %>
