<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Movies List
    <%= link_to "Ajouter un film", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  </div>
</div>

  <% @list.movies.each do |movie| %>
  <ul>
    <li><%= movie.title %></li>
    <li><p>Test</p></li>
    <li><%= movie.overview %></li>
    <li><%= movie.poster_url %></li>
    <li><%= movie.rating %></li>
    <% bookmark = Bookmark.find_by(list_id: @list, movie_id: movie.id) %>
    <%= bookmark.comment %>
    <%= link_to "Delete", bookmark_path(bookmark), data:{turbo_method: :delete, turbo_confirm: "Etes vous sur ?"}%>
  </ul>
    <% end %>

    <%= link_to "Back", lists_path, class: "btn btn-primary" %>
